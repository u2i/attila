{{!< default}}
<header class="blog-header {{#if @site.cover_image}} has-cover{{/if}}">
	<div class="inner">
		<div class="box blog-box">
			<h1 class="blog-name">{{@site.title}}</h1>
			{{#if @site.description}}
			<span class="blog-description">{{@site.description}}</span>
			{{/if}}
		</div>
		{{#if @site.cover_image}}
		<picture class="hero">
			<source media="(max-width: 1023px)" srcset="{{asset "images/hero_360.png"}}, {{asset "images/hero_360@2x.png"}} 2x" />
			<source media="(max-width: 1365px)" srcset="{{asset "images/hero_1024.png"}}, {{asset "images/hero_1024@2x.png"}} 2x" />
			<source srcset="{{asset "images/hero_1366.png"}}, {{asset "images/hero_1366@2x.png"}} 2x" />
			<img alt="" />
		</picture>
		{{/if}}
	</div>
</header>

<div id="index" class="container">

	<main class="content" role="main">

		{{> "loop"}}

	</main>

</div>
